template(name='taskListItem')
  div.col-md-11
    div.panel.panel-default
      div.panel-heading
        if isOverdue deadline
          span.label.label-danger.pull-right 过期
        else
          p.pull-right
            span.label.label-warning 距离任务截止时间还有
            span.label.label-danger {{GetDateDiff deadline}}
            span.label.label-warning 天
        div.panel-title 
          span.glyphicon.glyphicon-file
          | {{title}}

          if isMyTaskPage
            span.label.label-info {{state}}

      div.panel-body
        p!= description
        a.btn.btn-info.btn-sm.pull-right(href='/oneTask/{{_id}}') 查看任务
      div.panel-footer 

        span.label.label-success 报酬
        | {{reward}}
