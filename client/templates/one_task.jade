template(name='oneTask')
  div.container-fluid
    div.row
      +functionalArea
      +oneTaskContent

template(name='oneTaskContent')
  div.col-md-offset-3.col-md-9.one-task-content
    div.page-header
      h1 任务详情
    div.panel.panel-primary
      div.panel-heading #{ task.title }
      div.panel-body
        div.row

          div.col-md-2.text-center
            p
              strong 发布者
          div.col-md-10
            p #{ task.createdBy }

          div.col-md-2.text-center
            p
              strong 类别
          div.col-md-10
            p #{ task.type }

          div.col-md-2.text-center
            p 
              strong 描述
          div.col-md-10
            p #{ task.description }

          div.col-md-2.text-center
            p 
              strong 截止
          div.col-md-10
            p #{ task.deadline.toLocaleString }

          div.col-md-2.text-center
            p 
              strong 酬劳
          div.col-md-10
            p #{ task.reward }

          if isExecutant task task.executant 'current-user'
            div.col-md-2.text-center
              p 
                strong 联系方式
            div.col-md-10
              p #{ task.contact }

          div.col-md-2.text-center
            p 
              strong 申请人
          div.col-md-10
            each task.applicantsAndReasons
              div.media.applicants(class='{{#if isExecutant task name "applicant"}} alert alert-success {{else}} {{#if isSelf name}} alert alert-info {{else}} well {{/if}} {{/if}}')
                div.media-left
                  a(href='#') 
                    img.media-object(src = '{{userImageSrc name}}')
                div.media-body
                  a
                    h4.media-heading #{ name }
                  div.col-md-10.reason #{ reason }
                  if isPublisher task
                    button.btn.btn-info.btn-sm.pull-right 同意

    if canBeApply task
      div
        p
          strong 申请理由
      div.editor
        textarea.form-control(id="edit" name="content")

    div.operation-btns
      if isAdmin
        button.btn.btn-primary.pull-right 删除任务

      else
        if canBeApply task
          button.btn.btn-primary.pull-right 申请任务

        if isExecutant task task.executant 'current-user'
          button.btn.btn-primary.pull-right 申请完成

        if isPublisher task
          button.btn.btn-primary.pull-right 取消发布


